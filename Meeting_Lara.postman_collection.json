{
    "info": {
        "name": "Meeting Lara API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Localités",
            "item": [
                {
                    "name": "Liste des localités",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/localities",
                            "host": ["{{base_url}}"],
                            "path": ["api", "localities"]
                        },
                        "description": "Récupère la liste de toutes les localités avec leurs relations (parent, enfants, type)"
                    }
                },
                {
                    "name": "Détails d'une localité",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/localities/{{locality_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "localities", "{{locality_id}}"]
                        },
                        "description": "Récupère les détails d'une localité spécifique avec ses relations"
                    }
                },
                {
                    "name": "Sous-localités",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/localities/{{locality_id}}/children",
                            "host": ["{{base_url}}"],
                            "path": ["api", "localities", "{{locality_id}}", "children"]
                        },
                        "description": "Récupère la liste des sous-localités d'une localité spécifique"
                    }
                }
            ]
        },
        {
            "name": "Types de localités",
            "item": [
                {
                    "name": "Liste des types",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/locality-types",
                            "host": ["{{base_url}}"],
                            "path": ["api", "locality-types"]
                        },
                        "description": "Récupère la liste de tous les types de localités avec le nombre de localités par type"
                    }
                },
                {
                    "name": "Détails d'un type",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/locality-types/{{type_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["api", "locality-types", "{{type_id}}"]
                        },
                        "description": "Récupère les détails d'un type de localité spécifique"
                    }
                },
                {
                    "name": "Localités d'un type",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/locality-types/{{type_id}}/localities",
                            "host": ["{{base_url}}"],
                            "path": ["api", "locality-types", "{{type_id}}", "localities"]
                        },
                        "description": "Récupère la liste des localités d'un type spécifique"
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000"
        },
        {
            "key": "locality_id",
            "value": "1"
        },
        {
            "key": "type_id",
            "value": "1"
        }
    ]
} 